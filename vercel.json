{
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/spa",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "api/telegram-webhook.js": {
      "memory": 128,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/telegram-webhook",
      "destination": "/api/telegram-webhook.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://web.telegram.org"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "7644823924:AAG3c4DcG4Ul2mA5z39G6OmlNT8bXrNEal0",
    "MINI_APP_URL": "https://yurlo.vercel.app"
  }
}
