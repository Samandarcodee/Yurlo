{
  "version": 2,
  "builds": [
    {
      "src": "client/App.tsx",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/spa"
      }
    },
    {
      "src": "netlify/functions/api.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/netlify/functions/api.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "netlify/functions/api.ts": {
      "includeFiles": "server/**"
    }
  },
  "outputDirectory": "dist/spa",
  "installCommand": "npm install",
  "buildCommand": "npm run build:client",
  "devCommand": "npm run dev",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://web.telegram.org"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "7644823924:AAG3c4DcG4Ul2mA5z39G6OmlNT8bXrNEal0",
    "MINI_APP_URL": "https://your-vercel-app.vercel.app"
  }
}
